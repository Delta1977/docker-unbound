{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "automerge": false,
  "description": "Schedule daily before 4 AM",
  "schedule": ["* 0-3 * * *"],
  "packageRules": [
    {
      "description": "Update Docker base images and ARGs",
      "matchDatasources": [
        "docker", "dockerfile", "docker-version", "github-tags"
      ],
      "matchPackageNames": [
        "alpine", "tonistiigi/xx"
      ],
      "matchFileNames": [
        "Dockerfile"
      ],
      "automerge": false
    },
    {
      "description": "Update Unbound, LDNS, and XX versions declared as ARGs",
      "matchDatasources": ["github-tags"],
      "matchPackageNames": [
        "unbound", "ldns", "tonistiigi/xx"
      ],
      "matchFileNames": ["Dockerfile"],
      "automerge": false
    }
  ],
  "docker": {
    "enabled": true
  }
}
