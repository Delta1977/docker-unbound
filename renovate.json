{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "* 0-3 * * *"
  ],


  "customDatasources": {
    "curl": {
      "defaultRegistryUrlTemplate": "https://nlnetlabs.nl/downloads/unbound/",
      "format": "html"
    }
  },
  "packageRules": [
    {
      "matchDatasources": ["custom.curl"],
      "extractVersion": "/unbound-(?<version>.+)\\.tar\\.gz$"
    }
  ]
}
